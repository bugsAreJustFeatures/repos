generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id Int @id @default(autoincrement())

  username String 
  password String

  posts_by_user posts []
  comments_by_user comments []
}

model posts {
  id Int @id @default(autoincrement())

  post_title String
  post_contents String
  creation_time DateTime
  last_modified DateTime?
  topics String?

  post_comments comments []

  userId Int
  created_by users @relation(fields: [userId], references: [id])
}

model comments {
  id Int @id @default(autoincrement())

  commment_title String?
  comment_contents String
  creation_time DateTime

  userId Int
  commented_by users @relation(fields: [userId], references: [id])

  postId Int
  commented_on_post posts @relation(fields: [postId], references: [id])
}