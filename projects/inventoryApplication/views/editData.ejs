                <br> <br>

                <label for="animalSpeciesInput">Species: </label>
                <input type="text" name="animalSpeciesInput" id="animalSpeciesInput" required>
                <br><br>

                <label for="animalNativeToInput">Native To (continent): </label>
                <input type="text" name="animalNativeToInput" id="animalNativeToInput" required>
                <br><br>

                <label for="animalBreedInput">Breed: </label>
                <input type="text" name="animalBreedInput" id="animalBreedInput" required>
