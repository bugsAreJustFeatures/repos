<html>
    <head>
        <title>
            Home
        </title>
    </head>
    <body>
        <h3>Links</h3>
        <a href="/sign-up">Sign up here!</a> <br>
        <a href="/login">Login here!</a> <br>
        <a href="/create">create a message</a> <br>
        <a href="/view-my-messages">view your messages</a> <br>

        <br><br>

        <% if (currentUser) { %>
            hi there <%= currentUser.username %>
            <a href="/logout">Log Out</a>
        <% } %>

        <br><br>

        <% if (otherMessages) { %>
            <% otherMessages.forEach(msg => { %>

                <% if (currentUser) { %>
                    <% if (currentUser.username === msg.username) { %>
                        Created by: YOU
                    <% } else { %>
                    Created by: <%= msg.username %> 
                    <% } %>
                <% } else {%>
                    Created by: Anon
                <% }%>

                <br>

                Message: <%= msg.message %>
                <br><br>

               <% if (currentUser) { %>
                    <% if (currentUser.admin_status) { %>
                        <form action="/deleteGlobalMessage" method="post">
                            <input type="hidden" name="message_id" id="message_id" value="<%= msg.id %>">
                            <button type="submit">Delete</button>
                        </form>
                    <% } %>
                <% } else { %> 
                <br><br>
            <% }}) %>
        <% } %>
    </body>
</html>