<html>
    <head>
        <title>
            Your messages
        </title>
    </head>
    <body>
        <%- include ('./header.ejs'); %>

        <% if (messages) { // need to make it so it only shows this when messages actually exists and then make the below form post to a route that queries the db and deletes the corresponding message via req.user.id%> 
            <h2><strong><u>Your messages</u></strong></h2>

            <% messages.forEach((message, index) => { %>

                <%= index + 1 %>. <%= message.message %>

                <form action="/deleteOwnMessage" method="post">
                    <input type="hidden" name="message_id" id="message_id" value="<%= message.id %>">
                    <button type="submit">Delete</button>
                    <br><br>
                </form>
                
            <% }); %>
        <% }; %>
        
        <br><br>
    </body>
</html>