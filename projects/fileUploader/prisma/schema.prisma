generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
} 

model users {
  id Int @id @default(autoincrement()) //change to uuid()
  username String @unique
  password String 
  folders folders[]
  files_uploaded files[]
}

model files {
  id Int @id @default(autoincrement()) //change to uuid()
  file_name String
  link String
  file_size Int
  uploaded_date DateTime
  folderId Int
  userId Int
  parent_folder folders @relation(fields: [folderId], references: [id])
  uploaded_by users @relation(fields: [userId], references: [id])
}

model folders {
  id Int @id @default(autoincrement()) //change to uuid()
  folder_name String
  userId Int
  contains_files files[]
  create_by users @relation(fields: [userId], references: [id])

  @@unique([folder_name, userId])
}

model session {
  id String @id 
  sid String @unique
  data String 
  expiresAt DateTime
}
