<html>
    <head>
        <title>
            Your folder
        </title>
        <body>
            <%- include ("./header.ejs") %>
            <br>
            <br>
            <% if (files) { %>
                <% files.forEach(file => { %>
                    Name: <%= file.file_name %> <br>                    
                    <form action="/<%= file.file_name %>/editFile" method="get">
                        <button type="submit">Edit File</button>
                    </form>
                    
                    <form action="/<%= file.path %>/share" method="post">
                        <button type="submit">Share</button>
                    </form>

                    <form action="/<%= file.path %>/download" method="post">
                        <button type="submit">Download</button>
                    </form>
                <% }) %>
            <% }; %>

            
        </body>
    </head>
</html>