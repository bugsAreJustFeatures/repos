<html>
    <head>
        <title>
            Your folder
        </title>
        <body>
            <%- include ("./header.ejs") %>
            <br>
            <br>
            <% if (files) { %>
                <% files.forEach(file => { %>
                    Name: <%= file.file_name %> <br>
                    Link: <a href="<%= file.link %>"> <%= file.link %> (placeholder for now) </a>
                    
                    <form action="/<%= file.file_name %>/editFile" method="get">
                        <button type="submit">Edit File</button>
                    </form>
                    
                    <form action="/<%= file.link %>/download" method="post">
                            <button type="submit">Download</button>
                    </form>
                <% }) %>
            <% } %>

            
        </body>
    </head>
</html>