<html>
    <head>
        <title>Home</title>
    </head> 
    <body>
        <%- include ("./header.ejs") %>

        <h1>Your Folders</h1>
        <a href="/createFolder">Create a Folder</a>

        <% if (folders) { %>
            <% for (let i = 0; i < folders.length; i++) { %>
                <br> <br>
                    <a href="/viewFolder/<%= folders[i].folder_name %>"> <%= folders[i].folder_name %> </a>

                    <form action="/edit/<%= folders[i].folder_name %>" method="get">
                        <button type="submit">Edit Folder</button>
                    </form>
            <% } %>
        <% }; %>
    </body>
</html>