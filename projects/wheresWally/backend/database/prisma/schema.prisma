generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id Int @id @default(autoincrement())
  username String @unique
  beach_club BigInt?
}

model game_sessions {
  id Int @id @default(autoincrement())
  userId String @unique  // change to temp_id  
  start_time BigInt?
}

model characters {
  id Int @id @default(autoincrement())
  character_name String @unique

  scenes scenes[] @relation("charactersScenes")
  positions positions[]
}

model scenes {
  id Int @id @default(autoincrement())
  scene_name String
  characters characters[] @relation("charactersScenes")
  positions positions[]
}

model positions {
  id Int @id @default(autoincrement())
  sceneId Int
  characterId Int
  character_position_x Int
  character_position_y Int

  character characters @relation(fields: [characterId], references: [id])
  scene scenes @relation(fields: [sceneId], references: [id])
}

